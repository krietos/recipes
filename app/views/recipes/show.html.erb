<h1><%= @recipe.name %></h1>

<h3>Rating: <%= @recipe.ave_rating %></h3>

<h3>Tags:</h3>


<% @recipe.tags.each do |tag| %>
  <li><%= tag.name %>  <a href='/recipes/tags/<%= tag.recipe_tags.first.id %>' class='btn btn-danger btn-xs' data-method='delete' rel='nofollow'>Delete</a></li>
<% end %>

<form action='/recipes/tags' method='post'>
  <input name='recipe_tag[recipe_id]' type="hidden" value="<%= @recipe.id %>">
  <label for='tags'>Tag</label>
    <select name='recipe_tag[tag_id]'>
      <%Tag.all.each do |tag|%>
        <option value='<%= tag.id %>' ><%= tag.name %></option>
      <% end %>
    </select>
  <button>Add Tag</button>
</form>

<form action='/ratings/<%= @recipe.id %>' method='post'>
  <input name='recipe_rating[recipe_id]' type="hidden" value="<%= @recipe.id %>">
  <label for='rating'>Rating</label>
    <select name='recipe_rating[rating]'>
      <option value='1'>1</option>
      <option value='2'>2</option>
      <option value='3'>3</option>
      <option value='4'>4</option>
      <option value='5'>5</option>
    </select>
  <button>Add Rating</button>
</form>

<a href='/recipes/<%= @recipe.id %>/edit' class='btn btn-primary'>Edit Recipe</a>

<a href='/recipes/<%= @recipe.id %>' class='btn btn-danger' data-method='delete' rel='nofollow'>Delete</a>

<a href='/recipes/' class='btn btn-primary'>Go Back</a>
