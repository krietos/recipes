<h1><%= @tag.name %></h1>
<h3>Recipes with this tag:</h3>
<% @tag.recipes.each do |recipe| %>
  <li><a href='/recipes/<%= recipe.id%>'><%= recipe.name %></a></li>
<% end %>

<a href='/tags/<%= @tag.id %>/edit' class='btn btn-primary'>Edit tag</a>

<a href='/tags/<%= @tag.id %>' class='btn btn-danger' data-method='delete' rel='nofollow'>Delete</a>

<a href='/tags/' class='btn btn-primary'>Go Back</a>
